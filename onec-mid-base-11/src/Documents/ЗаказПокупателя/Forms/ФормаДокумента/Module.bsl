	СогласованнаяСкидка.Вид = ВидПоляформы.ПолеВвода; 
	СогласованнаяСкидка.ПутьКДанным = "Объект.СС_СогласованнаяСкидка";
	СогласованнаяСкидка.УстановитьДействие("ПриИзменении","СС_СогласованнаяСкидкаПриИзменении");
	
	// ++++ Добавление Команды ПересчитатьТаблицу
	// Suvorov
	ПересчитатьТаблицу = Команды.Добавить("СС_ПересчитатьТаблицуПосле");
	ПересчитатьТаблицу.Заголовок = "Пересчитать таблицу";
	ПересчитатьТаблицу.Действие = "СС_ПересчитатьТаблицу";
	ПересчитатьТаблицу = Элементы.Добавить("СС_ПересчитатьТаблицу", Тип("КнопкаФормы"), Элементы.ГруппаШапкаЛево);
	ПересчитатьТаблицу.ИмяКоманды = "СС_ПересчитатьТаблицуПосле";
	ПересчитатьТаблицу.Вид = ВидКнопкиФормы.КнопкаКоманднойПанели;
	
КонецПроцедуры
	
